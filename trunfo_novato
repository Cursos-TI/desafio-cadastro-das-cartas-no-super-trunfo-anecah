#include <stdio.h>

#define ATTR_POP   0
#define ATTR_AREA  1
#define ATTR_PIB   2
#define ATTR_PTS   3
#define ATTR_DENS  4

int main(void) {
    const int ATTR = ATTR_POP;  

    char uf1[3], cod1[4], cidade1[50];
    unsigned long pop1; float area1, pib1; int pts1;

    char uf2[3], cod2[4], cidade2[50];
    unsigned long pop2; float area2, pib2; int pts2;

    /* Carta 1 */
    printf("=== Carta 1 ===\n");
    printf("UF (ex: SP): ");           scanf("%2s", uf1);
    printf("Codigo (ex: A01): ");      scanf("%3s", cod1);
    printf("Cidade: ");                scanf(" %49[^\n]", cidade1);
    printf("Populacao: ");             scanf("%lu", &pop1);
    printf("Area: ");                  scanf("%f", &area1);
    printf("PIB: ");                   scanf("%f", &pib1);
    printf("Pontos turisticos: ");     scanf("%d", &pts1);

    /* Carta 2 */
    printf("\n=== Carta 2 ===\n");
    printf("UF (ex: RJ): ");           scanf("%2s", uf2);
    printf("Codigo (ex: B02): ");      scanf("%3s", cod2);
    printf("Cidade: ");                scanf(" %49[^\n]", cidade2);
    printf("Populacao: ");             scanf("%lu", &pop2);
    printf("Area: ");                  scanf("%f", &area2);
    printf("PIB: ");                   scanf("%f", &pib2);
    printf("Pontos turisticos: ");     scanf("%d", &pts2);

    /* Exibe cadastro */
    printf("\n--- Carta 1 [%s-%s] %s ---\n", uf1, cod1, cidade1);
    printf("Pop:%lu  Area:%.2f  PIB:%.2f  Pontos:%d\n", pop1, area1, pib1, pts1);
    printf("--- Carta 2 [%s-%s] %s ---\n", uf2, cod2, cidade2);
    printf("Pop:%lu  Area:%.2f  PIB:%.2f  Pontos:%d\n\n", pop2, area2, pib2, pts2);

    /* Comparacao (if / if-else) */
    int resultado = 0; /* 1 = Carta 1 vence, 2 = Carta 2 vence, 0 = empate */

    if (ATTR == ATTR_POP) {
        if (pop1 > pop2) resultado = 1; else if (pop2 > pop1) resultado = 2;
    } else if (ATTR == ATTR_AREA) {
        if (area1 > area2) resultado = 1; else if (area2 > area1) resultado = 2;
    } else if (ATTR == ATTR_PIB) {
        if (pib1 > pib2) resultado = 1; else if (pib2 > pib1) resultado = 2;
    } else if (ATTR == ATTR_PTS) {
        if (pts1 > pts2) resultado = 1; else if (pts2 > pts1) resultado = 2;
    } else if (ATTR == ATTR_DENS) {
        float d1 = (area1 > 0) ? (pop1 / area1) : 0.0f;
        float d2 = (area2 > 0) ? (pop2 / area2) : 0.0f;
        if (d1 < d2) resultado = 1; else if (d2 < d1) resultado = 2; /* menor vence */
    }

    /* Saida do resultado */
    if (resultado == 1)
        printf("Vencedora: Carta 1 (%s-%s) pelo atributo selecionado.\n", uf1, cod1);
    else if (resultado == 2)
        printf("Vencedora: Carta 2 (%s-%s) pelo atributo selecionado.\n", uf2, cod2);
    else
        printf("Empate no atributo selecionado.\n");

    return 0;
}
