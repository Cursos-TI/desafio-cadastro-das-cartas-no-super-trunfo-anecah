#include <stdio.h>

int main(void) {
    const int BISPO = 5;   
    const int TORRE = 5;   
    const int RAINHA = 8;  

    printf("Bispo (diagonal superior direita):\n");
    for (int i = 0; i < BISPO; i++) {
        printf("Cima\n");
        printf("Direita\n");
    }
    printf("\n");

    printf("Torre (direita):\n");
    for (int i = 0; i < TORRE; i++) {
        printf("Direita\n");
    }
    printf("\n");

    printf("Rainha (esquerda):\n");
    for (int i = 0; i < RAINHA; i++) {
        printf("Esquerda\n");
    }

    return 0;
}
